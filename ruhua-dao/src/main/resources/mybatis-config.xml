<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="cacheEnabled" value="true" />
        <setting name="lazyLoadingEnabled" value="false" />
        <setting name="multipleResultSetsEnabled" value="true" />
        <setting name="useColumnLabel" value="true" />
        <setting name="useGeneratedKeys" value="true" />
        <setting name="autoMappingBehavior" value="PARTIAL" />
        <setting name="defaultExecutorType" value="SIMPLE" />
        <setting name="defaultStatementTimeout" value="25000" />
    </settings>

    <mappers>
        <mapper resource="sqlmap/mybatis/mysql/userMapper.xml" />
        <mapper resource="sqlmap/mybatis/mysql/mgrMapper.xml" />
        <mapper resource="sqlmap/mybatis/mysql/recommendMapper.xml" />
        <mapper resource="sqlmap/mybatis/mysql/dateMapper.xml" />
        <mapper resource="sqlmap/mybatis/mysql/bindingMapper.xml" />
    </mappers>

</configuration>
